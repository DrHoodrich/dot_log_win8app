<Page
    x:Class="DOTlogAPP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DOTlogAPP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Teal">  
        <ListView Name ="displayEvents" Background="Gray" HorizontalAlignment="Left" Height="349" Margin="108,181,0,0" VerticalAlignment="Top" Width="303">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=EVENT_TIME}"></TextBlock>
                        <TextBlock TextWrapping="Wrap"  Text="{Binding Path=EVENT_TEXT}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:ConnectionId='1' Name="syncButton" Content="Sync" HorizontalAlignment="Left" Margin="106,116,0,0" VerticalAlignment="Top" Width="147"                         />
        <Button x:ConnectionId='2' Name="addEventButton" Content="Add Event" HorizontalAlignment="Left" Margin="267,116,0,0" VerticalAlignment="Top" Width="147"                             />
        <Button x:ConnectionId='3' Name="eventTabButton" Content="Events" HorizontalAlignment="Left" Margin="105,560,0,0" VerticalAlignment="Top" Width="148"                             />
        <Button x:ConnectionId='4' Name="accountSettingsButton" Content="Account Settings" HorizontalAlignment="Left" Margin="267,560,0,0" VerticalAlignment="Top"                                    />
        <Button x:ConnectionId='5' Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="437,256,0,0" VerticalAlignment="Top"                           />
        <Image Source="Assets/banner.png" Stretch="None"  HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="1366"/>
    </Grid>
</Page>

